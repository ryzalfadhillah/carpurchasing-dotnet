<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - carpurchasing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/carpurchasing.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
</head>
<body style="background-color:#BFEA7C">
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar elevation-4" style="background-color: #416D19;">
        <!-- Brand Logo -->
        <a href="#" class="brand-link logo-switch">
            <img src="img/logo-berijalan.png" alt="Logo Berijalan" class="brand-image-xl logo-xl ">
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link" style="color:white">
                            <p>
                                Master
                                <i class="nav-icon bi bi-caret-down-fill"></i>
                            </p>
                        </a>

                        <ul class="nav nav-treeview" style="display: block;">
                            <li class="nav-item">
                                <a href="/Sales" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Sales</p>
                                </a>
                            </li>
                            <li class="nav-item ">
                                <a href="/User" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master User</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Customer" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Customer</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Tagihan" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Tagihan</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Mobil" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Mobil</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Brand" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Brand</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Type" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Type</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Model" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Model</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Usage" class="nav-link" style="color:white">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Master Jenis</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="background-color: #9BCF53 ">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="bi bi-list" style="color:white; font-size:20px"></i></a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link" style="color:white">Username</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link" style="color:white">Register</a>
            </li>

        </ul>
    </nav>
    <!-- /.navbar -->
    <main role="main" class="content-wrapper p-4" style="background-color:#BFEA7C">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
